{
  "openapi": "3.1.0",
  "info": {
    "title": "Search Documents Assistant API",
    "version": "1.0.0",
    "description": "Asynchronous search endpoint for Custom GPT."
  },
  "servers": [
    {
      "url": "https://backendsearch-production.up.railway.app",
      "description": "Railway production"
    }
  ],
  "paths": {
    "/api/assistant/search/start": {
      "post": {
        "summary": "Start an asynchronous document search",
        "operationId": "start_async_search",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Search started successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "job_id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/assistant/search/status/{job_id}": {
      "get": {
        "summary": "Check the status of a search job",
        "operationId": "get_search_status",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Job status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "queued",
                        "running",
                        "finished",
                        "failed",
                        "not_found"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/assistant/search/results/{job_id}": {
      "get": {
        "summary": "Get the results of a completed search job",
        "operationId": "get_search_results",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchRequest": {
        "type": "object",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              }
            }
          },
          "relevance_threshold": {
            "type": "number",
            "description": "Minimum similarity score for a result to be considered relevant (0.0 to 1.0). Default is 0.4.",
            "default": 0.4
          },
          "max_results": {
            "type": "integer",
            "description": "The maximum number of chunks to process for the summary. Default is 100.",
            "default": 100
          },
          "file_name_filter": {
            "type": "string",
            "description": "Filter by a specific file name."
          },
          "description_filter": {
            "type": "string",
            "description": "Filter by text in the document's description."
          },
          "start_date": {
            "type": "string",
            "format": "date",
            "description": "Filter for documents on or after this date (YYYY-MM-DD)."
          },
          "end_date": {
            "type": "string",
            "format": "date",
            "description": "Filter for documents on or before this date (YYYY-MM-DD)."
          }
        }
      },
      "Source": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "file_name": {
            "type": "string"
          },
          "page_number": {
            "type": "integer"
          },
          "score": {
            "type": "number"
          },
          "excerpt": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "A temporary, signed URL to download the source file."
          }
        }
      },
      "SearchResponse": {
        "type": "object",
        "properties": {
          "summary": {
            "type": [
              "string",
              "null"
            ]
          },
          "sources": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Source"
            }
          },
          "error": {
            "type": "string"
          }
        }
      }
    }
  }
}

