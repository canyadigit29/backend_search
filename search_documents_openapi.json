{
  "openapi": "3.1.0",
  "info": {
    "title": "Search Documents Assistant API",
    "version": "1.0.0",
    "description": "Minimal OpenAPI spec describing the assistant search endpoint for Custom GPT import."
  },
  "servers": [
    {
      "url": "https://backendsearch-production.up.railway.app",
      "description": "Railway production"
    }
  ],
  "paths": {
    "/api/assistant/search_docs": {
    "post": {
      "operationId": "searchDocumentsAssistant",
      "summary": "Search documents via assistant",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SearchResponse" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchRequest": {
        "type": "object",
        "properties": {
          "query": { "type": "string" },
          "user": { "type": "object", "properties": { "id": { "type": "string" } } },
          "start_date": { "type": "string", "format": "date" },
          "end_date": { "type": "string", "format": "date" }
        },
        "required": ["query"]
      },
      "Chunk": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "file_id": { "type": "string" },
          "content": { "type": "string" },
          "file_name": { "type": "string" },
          "page_number": { "type": "integer" }
        }
      },
      "SearchResponse": {
        "type": "object",
        "properties": {
          "retrieved_chunks": { "type": "array", "items": { "$ref": "#/components/schemas/Chunk" } },
          "summary": { "type": ["string", "null"] },
          "error": { "type": "string" }
        }
      }
    }
  }
}
